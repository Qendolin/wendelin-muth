{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["app/*"],
			"@/*": ["app/*"],
			"components/*": ["app/components/*"],
			"layouts/*": ["app/layouts/*"],
			"pages/*": ["app/pages/*"],
			"assets/*": ["app/assets/*"]
		},
		"types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "@nuxtjs/firebase"]
	},
	"exclude": ["node_modules", "app/.nuxt", "dist"]
}
